{
  "name": "ui-playground",
  "version": "1.0.0",
  "description": "playground for PeerUI components",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "peerui-copy": "cp -TRv ../peerio-desktop/src/ui-library/ ./src/ui-library/ && cp -TRv ../peerio-desktop/src/peer-ui.js ./src/peer-ui.js",

    "watch": "run-p watch:*",
    "watch:webpack": "webpack -d --watch",
    "watch:style": "npm run compile:style -- -w",

    "compile": "run-p compile:*",
    "compile:webpack": "webpack -p",
    "compile:style": "node-sass src/style.scss src/client/public/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suprko/ui-playground.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/suprko/ui-playground/issues"
  },
  "homepage": "https://github.com/suprko/ui-playground#readme",
  "dependencies": {
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack-dev-server": "^2.11.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "webpack": "^3.11.0"
  }
}
